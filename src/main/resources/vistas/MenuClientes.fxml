<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iesalandalus.programacion.tallermecanico.vista.ventanas.controladores.MenuClientes">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../imagenes/Usuario.png" />
         </image>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </ImageView>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="30.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="bInsertarCliente" mnemonicParsing="false" onAction="#InsertarCliente" prefHeight="60.0" prefWidth="200.0" text="Insertar Cliente">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../imagenes/Insertar.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="bBuscarCliente" layoutX="14.0" layoutY="180.0" mnemonicParsing="false" onAction="#BuscarCliente" prefHeight="60.0" prefWidth="200.0" text="Buscar Cliente">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../imagenes/Buscar.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <Button fx:id="bModificarCliente" mnemonicParsing="false" onAction="#ModificarCliente" prefHeight="60.0" prefWidth="200.0" text="Modificar Cliente">
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imagenes/Modificar.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="bBorrarCliente" mnemonicParsing="false" onAction="#BorrarCliente" prefHeight="60.0" prefWidth="200.0" text="Borrar Cliente">
                     <graphic>
                        <ImageView fx:id="bInsertarTrabajo" fitHeight="50.0" fitWidth="50.0" onDragDetected="#InsertarTrabajo" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../imagenes/Borrar.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="bListarClientes" mnemonicParsing="false" onAction="#ListarClientes" prefHeight="60.0" prefWidth="200.0" text="Listar Clientes">
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../imagenes/Listar.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
